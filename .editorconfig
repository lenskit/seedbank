root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[{*.json,*.yml,*.yaml,*.yml.jinja}]
indent_size = 2

[*.toml]
indent_size = 2

[*.sh]
end_of_line = lf

[*.{bat,cmd}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
